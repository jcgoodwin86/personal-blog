---
const { post } = Astro.props;
---

<div class="flex my-2">
  <img src={post.node.coverImage.url} alt="test" class="w-1/3" />
  <div class="flex flex-col">
    <a href={post.node.slug}>{post.node.title}</a>
    <p>{post.node.author.name}</p>
    <p>{post.node.publishedAt}</p>
    <p>{post.node.readTimeInMinutes}</p>
  </div>
</div>
