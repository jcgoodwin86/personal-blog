---
const { post } = Astro.props;
---

<div class="flex flex-col my-2 lg:w-2/3">
  <img src={post.node.coverImage.url} alt="test" />
  <div class="flex flex-col px-3">
    <h2
      class="text-xl md:text-5xl font-sans font-extrabold text-slate-900 my-2"
    >
      <a href=`/blog/${post.node.slug}`>{post.node.title}</a>
    </h2>
    <p class="text-slate-500">{post.node.brief}</p>
    <!-- <p>{post.node.publishedAt}</p> -->
    <!-- <p>{post.node.readTimeInMinutes}</p> -->
  </div>
</div>
